<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.xin.qiyue.widget.InfoSettingTitle
        android:id="@+id/changepwdtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setText="修改密码"
        app:setBackground="@drawable/setting_toolbar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_textview_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/changeoldpwd"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="请输入您的密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_textview_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/changenewpwd"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="请输入您的密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_textview_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/changepwdagain"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="请确认您的密码"/>
    </LinearLayout>
    <Button
        android:id="@+id/surechangepwd"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/login_button_shape"
        style="?android:borderlessButtonStyle"/>
</LinearLayout>