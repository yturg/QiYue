<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/note_popedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:hint="说说你的心得吧" />
        <View
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#c7c6c6"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:src="@drawable/xyvg_inputbar_emotion"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingRight="5dp"
            android:src="@drawable/xyvg_inputbar_hashtag"/>
        <Button
            android:id="@+id/note_fabupinglun"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/note_pinglun_fabu"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="13sp"
            style="?android:borderlessButtonStyle"/>
    </LinearLayout>
</merge>