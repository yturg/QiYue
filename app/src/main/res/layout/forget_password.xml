<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="20sp"
            android:textColor="#3b3b3b"
            android:layout_centerInParent="true"/>

        <ImageView
            android:onClick="backToLogin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/common_head_btn_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_textview_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/user_email_toResetP"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:hint="请输入验证邮箱"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_toResetP"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="重置密码"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/forgetpass_button_shape"/>
</LinearLayout>